<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/contenido"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".listacombo">

    <Spinner
        android:id="@+id/combopersonas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/txtcbid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Codigo personas"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/txtcbnombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nombres"
        android:inputType="textPersonName"
        android:maxLength="50" />

    <EditText
        android:id="@+id/txtcbpais"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Pais"
        android:inputType="textPersonName"
        android:maxLength="50" />


    <EditText
        android:id="@+id/txtcbtelefono"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Telefono"
        android:inputType="phone"
        android:maxLength="8"/>

    <EditText
        android:id="@+id/txtcbnota"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Nota"
        android:inputType="textPersonName"
        android:maxLength="250" />

    <ImageView
        android:id="@+id/imgfoto"
        android:layout_width="match_parent"
        android:layout_height="262dp"
        app:srcCompat="@android:drawable/ic_menu_camera" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btnactualizar"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Actualizar" />

            <Button
                android:id="@+id/btnllamar"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:text="llamar contacto" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/btneliminar"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Eliminar" />

            <Button
                android:id="@+id/btncompartir"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="compartir " />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <EditText
                android:id="@+id/txtbuscar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="textPersonName"
                android:text="Name" />

            <Button
                android:id="@+id/btnbuscar"
                android:layout_height="wrap_content"
                android:text="Buscar Contacto" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </TableLayout>


</LinearLayout>